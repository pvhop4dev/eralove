# EraLove Backend Environment Configuration

# Server Configuration
PORT=8080
ENVIRONMENT=development

# Database Configuration
MONGO_URI=mongodb://admin:password123@localhost:27017/eralove?authSource=admin
DATABASE_NAME=eralove

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=password123
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRATION=15
JWT_REFRESH_EXPIRATION=168

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:5173,http://127.0.0.1:8080

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=console

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads

# Email Configuration (Optional - Required for email verification and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@eralove.com
FROM_NAME=EraLove
ENABLE_EMAIL_VERIFY=false

# Frontend URL for email links
FRONTEND_URL=http://localhost:3000

# Storage Configuration
# Supported providers: local, minio, s3
STORAGE_PROVIDER=minio
STORAGE_REGION=us-east-1
STORAGE_BUCKET=eralove-uploads
STORAGE_ACCESS_KEY_ID=minioadmin
STORAGE_SECRET_KEY=minioadmin123
STORAGE_ENDPOINT=localhost:9000
STORAGE_USE_SSL=false
STORAGE_BASE_URL=http://localhost:9000

# Local Storage (uncomment to use local filesystem)
# STORAGE_PROVIDER=local
# STORAGE_BASE_URL=http://localhost:8080

# AWS S3 Configuration Example (uncomment to use S3)
# STORAGE_PROVIDER=s3
# STORAGE_REGION=us-east-1
# STORAGE_BUCKET=your-s3-bucket-name
# STORAGE_ACCESS_KEY_ID=your-aws-access-key
# STORAGE_SECRET_KEY=your-aws-secret-key
# STORAGE_USE_SSL=true
# STORAGE_BASE_URL=https://your-s3-bucket-name.s3.us-east-1.amazonaws.com

# External APIs (Optional)
OPENAI_API_KEY=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
